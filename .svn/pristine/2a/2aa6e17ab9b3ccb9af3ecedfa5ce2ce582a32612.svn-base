var record = {
    init: function (mySwiper2) {
        this.tabcord()
        this.onload(mySwiper2)
    },
    tabcord: function () {

        $(document).on("click", ".list-group-item", function () {
            var a=$(this).closest(".swiper-wrapper").find($(this).parent()).index()
            sessionStorage.setItem("index", a)
      
        }) 
    },
    onload: function (mySwiper2) {
        $(function () {
            var index = sessionStorage.getItem("index");
            console.log(typeof index)
            if (typeof index == "string") {
                $(".tab a").removeClass("active")
                $(".tab a").eq(index).addClass("active")
                $(".plist div").removeClass("swiper-slide-active")
                $(".plist").children("div").eq(index).addClass("swiper-slide-active")
                mySwiper2.slideTo(index, 500, false)
                $('.swiper-container2 .swiper-slide-active').css('height', 'auto').siblings('.swiper-slide').css('height', '0px');
                mySwiper2.update();
            }
        })
    }
        
}


