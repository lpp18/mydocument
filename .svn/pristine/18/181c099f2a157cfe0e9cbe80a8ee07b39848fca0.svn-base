                        $("#labdocType").text(processDatajson.processData.docType);
                        //开始填充审批日志
                        ApproveLog(processDatajson.approveLog);
                        selectatt(mes[i].ServerID, mes[i].ModelId, mes[i].ProcessID);
                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }

        //2、附件
