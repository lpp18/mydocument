        //根据id删除发票信息方法
        function DelReceipt(id) {
            mui.ajax(
                //请求服务URL
                "../ReceiptHome/DelReceipt",
                {
                    data: { id: id },
                    dataType: "json",
                    type: "post",    //HTTP请求类型
                    timeout: 10000,  //10秒
                    headers: { 'Content-Type': 'application/json' },
                    success: function (data) {
                        //Success为false，查询出错
                        if (data.Success != null && (!data.Success)) {
                            MsgAlert(data.Message, 2);
                            console.log(data);
                            return;
                        }
